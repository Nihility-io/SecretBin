{
	"lock": false,
	"nodeModulesDir": "auto",
	"lint": {
		"rules": {
			"tags": ["recommended", "jsr"],
			"include": [
				"jsx-button-has-type",
				"camelcase",
				"default-param-last",
				"eqeqeq",
				"explicit-function-return-type",
				"explicit-module-boundary-types",
				"no-console",
				"no-const-assign",
				"no-eval",
				"no-external-import",
				"no-inferrable-types",
				"no-self-compare",
				"no-sparse-arrays",
				"no-sync-fn-in-async-fn",
				"no-throw-literal",
				"no-undef",
				"no-useless-rename",
				"single-var-declarator"
			]
		}
	},
	"imports": {
		"@nodesecure/npm-registry-sdk": "npm:@nodesecure/npm-registry-sdk@^4.2.0",
		"@nodesecure/npm-types": "npm:@nodesecure/npm-types@^1.3.0",
		"@zod/zod": "jsr:@zod/zod@^4.1.11",
		"octokit": "npm:octokit@^5.0.3"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": false,
		"proseWrap": "preserve",
		"trailingCommas": "onlyMultiLine"
	}
}
