{
	"version": "2.1.0",
	"tasks": {
		"check": {
			"description": "Lints and types check TypeScript files",
			"command": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx"
		},
		"test": {
			"description": "Runs unit tests and checks test coverage.",
			"command": "deno test --coverage=coverage && deno coverage coverage --detailed && rm -rf coverage"
		},
		"dev": {
			"description": "Starts SecretBin is dev mode and watch for changes.",
			"command": "deno run -A --unstable-cron --cert \"$PGPATH/tls/ca.crt\" vite"
		},
		"build": {
			"description": "Builds SecretBin for production.",
			"command": "deno run -A --unstable-cron vite build"
		},
		"start": {
			"description": "Starts SecretBin",
			"command": "deno serve -A _fresh/server.js"
		},
		"deps": {
			"description": "Updates the credits.json file",
			"command": "deno run -A jsr:@nihility-io/deno-deps@1.3.0"
		}
	},
	"lock": false,
	"nodeModulesDir": "auto",
	"lint": {
		"rules": {
			"tags": ["recommended", "fresh"],
			"include": [
				"jsx-button-has-type",
				"camelcase",
				"default-param-last",
				"eqeqeq",
				"explicit-function-return-type",
				"explicit-module-boundary-types",
				"no-console",
				"no-const-assign",
				"no-eval",
				"no-external-import",
				"no-inferrable-types",
				"no-self-compare",
				"no-sparse-arrays",
				"no-sync-fn-in-async-fn",
				"no-throw-literal",
				"no-undef",
				"no-useless-rename",
				"single-var-declarator"
			]
		},
		"plugins": ["jsr:@ryu/deno-lint-plugin-tailwindcss"]
	},
	"exclude": ["**/_fresh/*"],
	"imports": {
		"@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.0",
		"@heroicons/react": "npm:@heroicons/react@^2.2.0",
		"@libs/qrcode": "jsr:@libs/qrcode@^3.0.0",
		"@logtape/logtape": "jsr:@logtape/logtape@^1.0.4",
		"@nick/clsx": "jsr:@nick/clsx@^0.3.1",
		"@nihility-io/cookies": "jsr:@nihility-io/cookies@^2.0.0",
		"@nihility-io/crypto": "jsr:@nihility-io/crypto@^1.0.1",
		"@nihility-io/record": "jsr:@nihility-io/record@^1.0.4",
		"@preact/signals": "npm:@preact/signals@^2.3.1",
		"@std/assert": "jsr:@std/assert@^1.0.14",
		"@std/collections": "jsr:@std/collections@^1.1.3",
		"@std/encoding": "jsr:@std/encoding@^1.0.10",
		"@std/fs": "jsr:@std/fs@^1.0.19",
		"@std/http": "jsr:@std/http@^1.0.20",
		"@std/yaml": "jsr:@std/yaml@^1.0.9",
		"@tailwindcss/postcss": "npm:@tailwindcss/postcss@^4.1.13",
		"@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.13",
		"@zod/zod": "jsr:@zod/zod@^4.1.5",
		"cbor2": "npm:cbor2@^2.0.1",
		"client": "./client/mod.ts",
		"components": "./components/mod.ts",
		"fresh": "jsr:@fresh/core@2.0.0",
		"islands": "./islands/mod.ts",
		"lang": "./lang/mod.ts",
		"marked": "npm:marked@^16.2.1",
		"models": "./models/mod.ts",
		"postcss": "npm:postcss@^8.5.6",
		"postgres": "npm:postgres@^3.4.7",
		"preact": "npm:preact@^10.27.1",
		"sanitize-html": "npm:sanitize-html@^2.17.0",
		"server": "./server/mod.ts",
		"server/config": "./server/config/mod.ts",
		"server/database": "./server/database/mod.ts",
		"server/log": "./server/log/mod.ts",
		"tailwindcss": "npm:tailwindcss@^4.1.13",
		"ts-pattern": "jsr:@gabriel/ts-pattern@^5.8.0",
		"utils": "./utils/mod.ts",
		"utils/errors": "./utils/errors/mod.ts",
		"utils/errors/patch": "./utils/errors/patch.ts",
		"utils/helpers": "./utils/helpers/mod.ts",
		"utils/hooks": "./utils/hooks/mod.ts",
		"utils/middleware": "./utils/middleware/mod.ts",
		"utils/state": "./utils/state.ts",
		"vite": "npm:vite@^7.1.5"
	},
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.asynciterable",
			"deno.ns",
			"deno.window",
			"deno.unstable"
		],
		"jsx": "precompile",
		"jsxImportSource": "preact",
		"jsxPrecompileSkipElements": [
			"a",
			"img",
			"source",
			"body",
			"html",
			"head"
		]
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": false,
		"proseWrap": "preserve",
		"exclude": [
			"styles/**",
			"credits.json",
			"README.md",
			"*.yaml",
			"container/*"
		],
		"trailingCommas": "onlyMultiLine"
	},
	"test": {
		"include": ["./config", "./helpers", "./lang", "./log", "./secret"]
	},
	"denoDeps": {
		"entrypoints": ["main.ts", "components/mod.ts", "islands/mod.ts"],
		"output": "credits.json",
		"jsonMode": false,
		"dependencies": [
			{
				"name": "tailwindcss",
				"repository": "https://github.com/tailwindlabs/tailwindcss",
				"version": "4.1.11",
				"authors": ["Tailwind Labs, Inc."],
				"license": "MIT License",
				"licenseFile": "https://raw.githubusercontent.com/tailwindlabs/tailwindcss/refs/heads/main/LICENSE"
			}
		],
		"excludeDependencies": [
			"@esbuild/.*",
			"esbuild-wasm",
			"@tailwindcss/.*",
			"lightningcss-.*",
			"@types/.*"
		]
	}
}
