{
	"version": "2.0.1",
	"tasks": {
		"postgres:build": {
			"description": "Builds the Postgres library using the Postgres.js.",
			"command": "cd lib && deno run -A build_postgres.ts"
		},
		"check": {
			"description": "Lints and types check TypeScript files",
			"command": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx"
		},
		"test": {
			"description": "Runs unit tests and checks test coverage.",
			"command": "deno test --coverage=coverage && deno coverage coverage --detailed && rm -rf coverage"
		},
		"dev": {
			"description": "Starts SecretBin is dev mode and watch for changes.",
			"command": "deno run -A --cert ~/Library/Application\\ Support/Postgres/var-17/tls/ca.crt --watch=static/,routes/ --watch=config.yaml dev.ts"
		},
		"build": {
			"description": "Builds SecretBin for production.",
			"command": "deno run -A dev.ts build"
		},
		"start": {
			"description": "Starts SecretBin",
			"command": "deno serve -A _fresh/server.js"
		},
		"update": {
			"description": "Updates SecretBin to the latest Deno Fresh version.",
			"command": "deno run -A -r jsr:@fresh/update@2.0.0-alpha.34 ."
		},
		"deps": {
			"description": "Updates the credits.json file",
			"command": "deno run -A jsr:@nihility-io/deno-deps@1.2.0"
		}
	},
	"lock": false,
	"nodeModulesDir": "auto",
	"lint": {
		"rules": {
			"tags": ["recommended", "fresh"],
			"include": [
				"jsx-button-has-type",
				"camelcase",
				"default-param-last",
				"eqeqeq",
				"explicit-function-return-type",
				"explicit-module-boundary-types",
				"no-console",
				"no-const-assign",
				"no-eval",
				"no-external-import",
				"no-inferrable-types",
				"no-self-compare",
				"no-sparse-arrays",
				"no-sync-fn-in-async-fn",
				"no-throw-literal",
				"no-undef",
				"no-useless-rename",
				"single-var-declarator"
			]
		}
	},
	"exclude": ["**/_fresh/*"],
	"imports": {
		"@fresh/plugin-tailwind": "jsr:@fresh/plugin-tailwind@^0.0.1-alpha.9",
		"@libs/qrcode": "jsr:@libs/qrcode@^3.0.0",
		"@logtape/logtape": "jsr:@logtape/logtape@^1.0.4",
		"@nihility-io/cookies": "jsr:@nihility-io/cookies@^2.0.0",
		"@nihility-io/crypto": "jsr:@nihility-io/crypto@1.0.0-beta.5",
		"@nihility-io/record": "jsr:@nihility-io/record@^1.0.4",
		"@preact/signals": "npm:@preact/signals@^2.2.1",
		"@std/assert": "jsr:@std/assert@^1.0.14",
		"@std/collections": "jsr:@std/collections@^1.1.3",
		"@std/encoding": "jsr:@std/encoding@^1.0.10",
		"@std/fs": "jsr:@std/fs@^1.0.19",
		"@std/http": "jsr:@std/http@^1.0.20",
		"@std/yaml": "jsr:@std/yaml@^1.0.9",
		"@tailwindcss/postcss": "npm:@tailwindcss/postcss@^4.1.12",
		"@zod/zod": "jsr:@zod/zod@^4.0.17",
		"classnames": "npm:classnames@^2.5.1",
		"components": "./components/mod.ts",
		"config": "./config/mod.ts",
		"fresh": "jsr:@fresh/core@^2.0.0-alpha.58",
		"helpers": "./helpers/mod.ts",
		"islands": "./islands/mod.ts",
		"lang": "./lang/mod.ts",
		"log": "./log/mod.ts",
		"marked": "npm:marked@^16.1.2",
		"postcss": "npm:postcss@^8.5.6",
		"postgres": "./lib/postgres/mod.js",
		"preact": "npm:preact@^10.27.0",
		"sanitize-html": "npm:sanitize-html@^2.17.0",
		"secret/client": "./secret/client/mod.ts",
		"secret/models": "./secret/models/mod.ts",
		"secret/server": "./secret/server/mod.ts",
		"state": "./state.ts",
		"tailwindcss": "npm:tailwindcss@^4.1.12",
		"ts-pattern": "jsr:@gabriel/ts-pattern@^5.8.0",
		"utils": "./utils.ts"
	},
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.asynciterable",
			"deno.ns",
			"deno.window",
			"deno.unstable"
		],
		"jsx": "precompile",
		"jsxImportSource": "preact",
		"jsxPrecompileSkipElements": [
			"a",
			"img",
			"source",
			"body",
			"html",
			"head"
		]
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": false,
		"proseWrap": "preserve",
		"exclude": [
			"styles/**",
			"credits.json",
			"README.md",
			"*.yaml",
			"container/*"
		],
		"trailingCommas": "onlyMultiLine"
	},
	"test": {
		"include": ["./config", "./helpers", "./lang", "./log", "./secret"]
	},
	"denoDeps": {
		"entrypoint": "main.ts",
		"output": "credits.json",
		"jsonMode": false,
		"dependencies": [
			{
				"name": "postgres",
				"repository": "https://github.com/porsager/postgres",
				"version": "3.4.7",
				"authors": ["Rasmus Porsager"],
				"license": "Unlicense license",
				"licenseFile": "https://raw.githubusercontent.com/porsager/postgres/refs/heads/master/UNLICENSE"
			},
			{
				"name": "tailwindcss",
				"repository": "https://github.com/tailwindlabs/tailwindcss",
				"version": "4.1.11",
				"authors": ["Tailwind Labs, Inc."],
				"license": "MIT License",
				"licenseFile": "https://raw.githubusercontent.com/tailwindlabs/tailwindcss/refs/heads/main/LICENSE"
			},
			{
				"name": "heroicons",
				"repository": "https://github.com/tailwindlabs/heroicons",
				"version": "2.2.0",
				"authors": ["Tailwind Labs, Inc."],
				"license": "MIT License",
				"licenseFile": "https://raw.githubusercontent.com/tailwindlabs/heroicons/refs/heads/master/LICENSE"
			}
		],
		"excludeDependencies": [
			"@esbuild/.*",
			"esbuild-wasm",
			"@tailwindcss/.*",
			"lightningcss-.*",
			"@types/.*"
		]
	}
}
